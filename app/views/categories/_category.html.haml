.row
  .well
    .span11
      %h2
        = category.name
        = link_to "編輯", edit_category_path(category), :class=>"btn btn-info"
        = link_to "刪除", category, :method=>:delete, :class=>"btn btn-danger", :confirm=>"你知道你在做什麼？"
      .row
        .span5
          %h3 表達式
          %ol
            - category.patterns.each do |p|
              %li= p.content
        .span6
          %h3 回答
          %ol
            - category.responses.each do |p|
              %li= p.content